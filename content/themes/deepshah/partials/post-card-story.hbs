<article class="post-card story {{post_class}} {{#unless feature_image}}no-image{{else}}{{#is "home"}}{{#has index="nth:6"}}post-card-large{{/has}}{{/is}}{{/unless}}">

    {{#if feature_image}}
    <a class="post-card-image-link story" href="{{url}}">
        {{!-- This is a responsive image, it loads different sizes depending on device
        https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
        <img class="post-card-image-story"
            srcset="{{img_url feature_image size="s"}} 300w,
                    {{img_url feature_image size="m"}} 600w,
                    {{img_url feature_image size="l"}} 1000w,
                    {{img_url feature_image size="xl"}} 2000w"
            sizes="(max-width: 1000px) 400px, 700px"
            src="{{img_url feature_image size="m"}}"
            alt="{{title}}"
        />
    </a>
    {{/if}}

    <div class="post-card-content story">

        <a class="post-card-content-link story" href="{{url}}">

            <header class="post-card-header story">
                {{#if primary_tag}}
                    <span class="post-card-tags story">{{primary_tag.name}}</span>
                {{/if}}
                <h2 class="post-card-title stpry">{{title}}</h2>
            </header>

        </a>



    </div>{{!--/.post-card-content--}}

</article>
